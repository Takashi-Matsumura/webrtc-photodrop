generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Connection {
  id        String   @id @default(cuid())
  code      String   @unique @db.VarChar(6)
  offer     String?  @db.Text
  answer    String?  @db.Text
  createdAt DateTime @default(now())
  expiresAt DateTime
  used      Boolean  @default(false)

  @@map("connections")
}
